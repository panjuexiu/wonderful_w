<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <!--  <Button
        android:id="@+id/detail_btn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/wwlogo"
        android:background="@drawable/detail_btn"
        android:text="@string/more" /> -->

    <TextView
        android:id="@+id/detail_tv_box"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/box_office" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/detail_tv_num_1"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />
            <TextView
                android:id="@+id/detail_tv_ranking"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/detail_tv_num_2"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29,934" />
            <TextView
                android:id="@+id/detail_tv_weekly"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekly" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/detail_tv_num_3"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34,349" />
            <TextView
                android:id="@+id/detail_tv_total"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="12dp"
		android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >
		    <TextView
	        android:id="@+id/detal_tv_comment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/comment"
	        android:textSize="20sp" />
    	</LinearLayout>
    	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:orientation="horizontal"
	    android:layout_centerVertical="true"	    
	    >
		    <!-- <Button
	            android:id="@+id/detail_btn_comment"
	            android:textColor="@color/wwlogo"
	        	android:background="@drawable/detail_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/commenting" /> -->
		</LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="12dp"
        android:layout_height="wrap_content" >
    	<TextView
        android:id="@+id/detail_tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="@string/userName" />
    	<RatingBar
    	    android:id="@+id/detail_rb_comment"
    	    style="?android:attr/ratingBarStyleSmall"
    	    android:rating="4"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_toRightOf="@+id/detail_tv_user" />
	    <TextView
	        android:id="@+id/detail_tv_time"
	        android:textColor="@color/gray"
	        android:layout_toRightOf="@+id/detail_rb_comment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/time" />

    </RelativeLayout>
    <TextView
        android:id="@+id/detail_tv_comment"
        android:paddingLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment" />

    
</LinearLayout>
