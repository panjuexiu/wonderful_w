<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/mine_tv_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:text="@string/filmName" />

    <TextView
        android:id="@+id/mine_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mine_tv_film"
        android:layout_below="@+id/mine_tv_film"
        android:layout_marginTop="15dp"
        android:text="" />

    <TextView
        android:id="@+id/mine_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mine_tv_date"
        android:layout_alignBottom="@+id/mine_tv_date"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/mine_tv_film"
        android:text="12:00" />

    <TextView
        android:id="@+id/mine_tv_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mine_tv_date"
        android:layout_below="@+id/mine_tv_date"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/cinema" />

    <TextView
        android:id="@+id/mine_tv_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mine_tv_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:textSize="22sp"
        android:text="2å¼ " />

</RelativeLayout>
