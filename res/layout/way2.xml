<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/way_rl_zhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageButton
        android:id="@+id/way_ib_zhi"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/zhi" />
        <TextView
            android:id="@+id/way_tv_zhi"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="支付宝" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/way_rl_wei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageButton
        android:id="@+id/way_ib_wei"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/wei" />
        <TextView
            android:id="@+id/way_tv_wei"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="微信" />
    </RelativeLayout>

</LinearLayout>
