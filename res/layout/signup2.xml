<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    android:layout_height="50dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/linearLayout_cell" 
            android:layout_width="3dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView_cell"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cell"
                android:textColor="@color/lightseagreen" />

        </LinearLayout>
        <LinearLayout 
            android:layout_width="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView_mail"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mail"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/signup_iv_half"
        android:layout_width="255dp"
        android:layout_height="3dp"
        android:background="@drawable/tabline" />

</LinearLayout>
